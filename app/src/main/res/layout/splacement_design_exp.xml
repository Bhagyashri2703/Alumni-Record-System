<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="6dp">
    <!--    Alumni Design-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="6">
        <LinearLayout
            android:id="@+id/lytAlumni"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:weightSum="6">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:src="@mipmap/albranch"
                android:id="@+id/imgCompany"
                android:layout_gravity="center"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="5"
                android:weightSum="4">

                <TextView
                    android:drawableLeft="@mipmap/alname"
                    android:drawablePadding="10dp"
                    android:id="@+id/txtCNameLocation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/adamina"
                    android:gravity="center|left"
                    android:text="CName Location"
                    android:textAlignment="gravity"
                    android:textAllCaps="true"
                    android:textColor="@color/blackTextColor"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:drawableLeft="@mipmap/albranch"
                    android:drawablePadding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:id="@+id/txtJobTitleType"
                    android:fontFamily="@font/asar"
                    android:gravity="center|left"
                    android:text="Job Title Type"
                    android:textAlignment="gravity"
                    android:textColor="@color/colorPrimaryDark"></TextView>

                <TextView
                    android:drawableLeft="@mipmap/alcompany"
                    android:drawablePadding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:id="@+id/txtExpSalary"
                    android:fontFamily="@font/asar"
                    android:gravity="center|left"
                    android:text="Company Name"
                    android:textAlignment="gravity"
                    android:textColor="@color/colorPrimaryDark"></TextView>

                <TextView
                    android:drawableLeft="@mipmap/alpost"
                    android:drawablePadding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/asar"
                    android:gravity="center|left"
                    android:text="Post Package"
                    android:id="@+id/txtJobPostedOn"
                    android:textAlignment="gravity"
                    android:textColor="@color/colorPrimaryDark"></TextView>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="5"
            android:background="@color/browser_actions_bg_grey">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                android:layout_gravity="left|center"
                android:id="@+id/imgMore"
                android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>





</androidx.cardview.widget.CardView>